<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<!--  MAPEO EN SOLITARIO:  (SIN RELACIONES) -->
<!--  MAPEO EN CONJUNTO:  (CON RELACIONES) -->
<class name="datos.Habitacion" table="Habitacion">
<id column="idHabitacion" name="idHabitacion">
<generator class="identity"></generator>
</id>
<property column="capacidadMaxima" name="CapacidadMaxima" type="int"></property>
<property column="disponible" name="disponible" type="boolean"></property>
<property column="precioNoche" name="precioNoche" type="float"></property>
<property column="precioTemporada" name="precioTemporada" type="float"></property>


<!--  <one-to-one class="datos.TipoHabitacion" name="TipoHabitacion"></one-to-one> -->
</class>
</hibernate-mapping>
