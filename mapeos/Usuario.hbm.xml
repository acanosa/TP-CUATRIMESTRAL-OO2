<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

<class name="datos.Usuario" table="Usuario">
<id column="idUsuario" name="idUsuario">
<generator class="foreign">
	<param name="property">login</param>
</generator>
</id>
<property column="nombre" name="nombre" type="string"/>
<property column="apellido" name="apellido" type="string"/>
<property column="dni" name="dni" type="int"/>
<property column="baja" name="baja" type="boolean"/>




<one-to-one class="datos.Login" name="login" />

<one-to-one class="datos.TipoUsuario" name="tipoUsuario" />




</class>
</hibernate-mapping>
